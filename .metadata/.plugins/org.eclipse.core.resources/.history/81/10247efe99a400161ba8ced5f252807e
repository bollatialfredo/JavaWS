import java.util.*;

public class Biblioteca implements Iterable<Libro> {
	private List<Libro> lista = new ArrayList<Libro>(); 
	private Iterator<Libro> it;
	
	public Biblioteca(){
		it = iterator();
	}
	
	public List<Libro> listaDeLibros(){
		List<Libro> aux = new ArrayList<Libro>();
		while(it.hasNext()){
			aux.add(it.next());
		}
		return aux;
	}
	
	public void addLibro(Libro l){
		lista.add(l);
	}
	
	@Override
	public Iterator<Libro> iterator() {
		if (it!=null) {
			return it;
		}else{
			List<Libro> aux = new ArrayList<Libro>(lista);
			return new IteradorPorISBN(aux);			
		}
		
	}

}
