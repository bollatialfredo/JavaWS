import java.util.*;

public class TareaTerminal extends ELMTarea {
	
	private Set<Recurso> setR = new HashSet<Recurso>();
	
	public TareaTerminal(){
		
	}
	
	
	public boolean addRecurso(Recurso r){
		return setR.add(r);
	}
	
	@Override
	public int estado() {
		return estado;
	}

	@Override
	public List<Recurso> getRecursos() {
		return new ArrayList<Recurso>(setR);
	}

	@Override
	public int fechaInicio() {
		return 0;
	}


	@Override
	public ELMTarea tareaQueUsaRecurso(Recurso r) {
		if( setR.contains(r)){
			return this;
		}else{
			return null;
		}
	}

}
